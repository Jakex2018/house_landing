---
import { Button } from "@/components/ui/button";
import {
    Card,
    CardFooter,
} from "@/components/ui/card";
import TitleIcon from "./TitleIcon.astro";
const {image,title,rooms,ft,price} = Astro.props;
---

<Card className=" bg-[#DDC7BB] rounded-[20px] overflow-hidden group ">
    <img
        src={`/${image}`}
        class="size-[352px] w-full object-cover hover:scale-105 duration-300 "
        alt=""
    />
    <CardFooter>
        <div class="flex flex-col items-start justify-start mt-5 w-full group">
            <div class="flex items-center gap-x-3">
                <img src="/location.svg" class="" alt="" />
                <span class="text-[20px] font-bold">{title}</span>
            </div>
            <div class="flex items-center gap-x-12 mt-6">
                <TitleIcon room={rooms} title="Rooms" />
                <TitleIcon ft={ft} title="sq ft" />
            </div>
            <div class="flex items-center justify-between w-full mt-10">
                <Button className="bg-[#2B1B12] text-white">Sign Up</Button>
                <span class="font-bold text-[#4F3527] text-[20px]">
                    ${price}
                </span>
            </div>
        </div>
    </CardFooter>
</Card>
