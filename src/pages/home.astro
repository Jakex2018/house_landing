---
import "@/styles/globals.css";
import { Button } from "@/components/ui/button";
import Header from "@/components/Header.astro";
---

<section class="relative bg-[#FEF7F2] px-20 " id="home">
    <Header />
    <div class="flex sm:flex-row flex-col items-start mt-36 justify-between ">
        <div
            class="animate-slide-right flex flex-col items-start md:min-w-[50vh] sm:min-w-[40vh] min-w-[30vh] justify-start"
        >
            <h4 class="font-extrabold text-[50px] leading-[60px] mb-8">
                Find Your Dream Home
            </h4>
            <p
                class="text-balance md:text-[30px] lg:text-sm text-gray-600 text-md font-medium mb-7"
            >
                Explore our curated selection of exquisite properties
                meticulously tailored to your unique dream home vision
            </p>
            <Button className="bg-[#4f3527] px-20 py-6">Sign up</Button>
        </div>
        <img src="/hero.svg" alt="" class="animate-slide-left size-[1000px] object-fill -mt-60" />
    </div>
</section>